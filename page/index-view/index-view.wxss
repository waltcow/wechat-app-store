@import "../../component/marquee/marquee.wxss";
@import '../../component/citySelect/citySelect.wxss';

.container {
    display: flex;
    color: #666;
    flex-direction: column;
    position: relative;
    height: 100%;
    width: 100%;
}

.list {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    flex: 1;
}

.top {
    position: relative;
    width: 100%;
}

.title {
    position: absolute;
    left: 20%;
    top: 130px;
    color: #b3b3b3;
    width: 60%;
    text-align: center;
    line-height: 24px;
}

.title-mid {
    font-size: 16px;
    margin-top: 0.5em;
    margin-bottom: 1em;
}

.order-btn-top {
    font-size: 16px;
    padding: 0.7em 3.8em;
    border: #b2b3b3 solid 1px;
    color: #b2b3b3;
    border-radius: 50px;
}

.bottom {
    z-index: 1000;
    position: fixed;
    background-color: rgba(40,40,40,0.9);
    height: 96px;
    width: 100%;
    bottom: 0px;
    overflow: hidden;
}

.counter {
    display: flex;
    height: 60px;
    flex-direction: row;
}

.counter-left {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 60px;
}

.promotion-timer {
    flex: 1;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    font-size: 12px;
    color: #b9b9b9;
}

.promotion-status {
    flex: 1;
    display: flex;
    font-size: 14px;
    align-items: center;
    justify-content: flex-start;
    padding-left: 12px;
    font-weight: bold;
    color: #fff;
}

.timer-icon {
    margin-left: 12px;
    margin-right: 4px;
    width: 17.172px;
    height: 16px;
}

.time-left-text {
    padding: 0 2px;
    color: #ff6a00;
}

.counter-right {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    height: 60px;
}

.sold-total-text {
    color: #ff6a00;
    padding: 0 2px;
    font-weight: bold;
}

.order-btn {
    display: block;
    background: #ff6a00;
    font-weight: bold;
    text-align: center;
    line-height: 40px;
    width: 94px;
    border-radius: 5px;
    color: #fff;
    font-size: 16px;
}
.navigator {
    display: flex;
    height: 36px;
    flex-direction: row;
    background-color: rgba(2,2,2,0.9);
}
.navigator-item {
    display: block;
    line-height: 35px;
    width: 25%;
    color: #b9b9b9;
    text-align: center;
    font-size: 13px;
}
.comments {
    width: 100%;
    display: block;
}

.head-title {
    height: 30px;
    line-height: 30px;
    width: 100%;
    background-color: #eee9e6
}
.head-title-text {
    height: 30px;
    line-height: 30px;
    width: 200px;
    font-size: 14px;
    color: #6c594d;
}

.arrow-down-icon {
    margin: 0 5px 0 10px;
    height: 12px;
    width: 12px;
}

.comment-wrapper {
    border-bottom: 1px solid #dddddd;
    padding: 7px 10px;
    overflow: hidden;
    height: auto;
}

.comment-user {
    color: #999999;
    font-size: 12px;
    overflow: hidden;
}
.comment-content {
    font-size: 14px;
    height: auto;
    line-height: 20px;
    margin-top: 5px;
    margin-bottom: 5px;
    font-weight: normal;
}

.comment-type {
    color: #666666;
    font-size: 12px;
    line-height: 20px;
    float: right;
    height: 20px;
}

.order-now-title {
    background: #ff6a00;
    height: 36px;
    line-height: 36px;
    color: #FFF;
    font-size: 18px;
    vertical-align: middle;
    margin-bottom: 10px;
    padding-left: 8px;
}

.radio-group {
    display: inline-block;
}

.form-item {
    display: flex;
    margin-bottom: 12px;
    width: 100%;
}

.form-item .form-label {
    width: 80px;
    font-size: 14px;
    height: 32px;
    line-height: 32px;
    overflow: hidden;
    text-align: right;
}
.form-item .form-value {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 32px;
    line-height: 32px;
    margin-left: 12px;
    font-size: 14px;
}
.form-item .form-value .radio {
    font-size: 14px;
    height: 14px;
    width: 14px;
}
.form-item .form-label .star {
    display: inline-block;
    position: absolute;
    padding-top: 3px;
    width: 8px;
    font-size: 14px;
    color: #F00;
}


.default-input {
    font-size: 14px;
    padding: 4px 6px;
    width: 90%;
    border: 1px solid #eee;
}

.payment-icon {
    vertical-align: middle;
    width: 80px;
    height: 20px;
}

.order-remark-textarea {
    vertical-align: bottom;
    float: left;
    width: 90%;
    min-height: 56px;
    font-size: 14px;
    text-align: left;
    padding: 2px 4px;
    font-size: 14px;
    border: 1px solid #dddddd;
}

.order-submit {
    width: 100%;
    height: 36px;
    text-align: center;
    vertical-align: middle;
    padding: 8px 12px;
}

.order-submit-btn {
    display: inline-block;
    width: 200px;
    height: 36px;
    margin: 0 auto;
    background: #ff6a00;
    line-height: 36px;
    color: #FFF;
    font-size: 18px;
    vertical-align: middle;
    text-align: center;
    border: 0;
}
.order-final {
    line-height: 20px;
    margin-bottom: 12px;
}

.order-final-text {
    width: 100%;
    display: inline-block;
    color: red;
    font-size: 14px;
    text-align: center;
}

.copyright {
    height:30px;
    line-height:30px;
    color: #000;
    font-size:12px;
    text-align:center;
}
.br {
    width: 100%;
    height: 90px;
}